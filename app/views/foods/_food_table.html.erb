<table class="table table-hover foods">
    <thead>
      <tr class="food-headers">
        <th><%= sortable "name" %> <%= get_arrow("name") %></th>
        <th><%= sortable "serving" %> <%= get_arrow("serving") %></th>
        <th><%= sortable "calories" %> <%= get_arrow("calories") %></th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |f| %>
        <tr class="food">
          <td><%= f.name %></td>
          <td><%= f.serving %></td>
          <td><%= f.calories %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @foods %>

<script>

$(function(){
   $('.pagination a').attr('data-remote', 'true')
});
</script>
