<table class="table table-hover foods">
    <thead>
      <tr class="food-headers">
        <th><%= sortable "name" %> <%= get_arrow("name") %>
        </th>
        <th><%= sortable "serving" %> <%= get_arrow("serving") %></th>
        <th><%= sortable "calories" %> <%= get_arrow("calories") %></th>
        <th>Eaten?</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr class="food">
          <td><%= food.name %></td>
          <td><%= food.serving %></td>
          <td><%= food.calories %></td>
          <td>
            <%= link_to 'Edit', edit_food_path(food), remote: true %> |
            <%= link_to 'X', food_path(food), data: {method: 'delete', confirm:'Are you sure?'}, remote: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @foods %>

<script>

$(function(){
   $('.pagination a').attr('data-remote', 'true')
});
</script>
