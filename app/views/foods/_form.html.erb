<div class="add-food-form">
  <%= form_for @food, remote: true do |f| %>
    <div class="form-group">
      <%=f.label :name %>
      <%=f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%=f.label :serving %>
      <%=f.text_field :serving, class: "form-control" %>
    </div>
    <div class="form-group">
      <%=f.label :calories %>
      <%=f.text_field :calories, class: "form-control" %>
    </div>
    <%= f.submit "Add Food", :class => 'btn btn-warning' %>
  <% end %>
</div>
