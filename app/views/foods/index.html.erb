<div class="row row1">
  <div class="col-sm-6">
    <h3> Search for foods </h3>
    <%= form_tag foods_path, :method => 'get', :remote => true do %>
      <%= hidden_field_tag :direction, params[:direction] %>
      <%= hidden_field_tag :sort, params[:sort] %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
    <% end %>
  </div>
  <div class="col-sm-6">
    <%= link_to 'Add Food', new_food_path, remote: true, id:"add-food" %>
    <div id="edit-food">

    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div id="foods-div">
      <%= render "food_table" %>
    </div>
  </div>
</div>
